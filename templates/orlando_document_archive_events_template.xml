<!-- File name: orlando_events_template.xml -->

<!-- 
    Template to create a series of freestanding events, each wrapped in a CHRONEVENT, and each CHRONEVENT code block can then be copied and pasted into the appropriate Orlando
    Document Archive's Events text area form field page.
-->

<EVENTS>
    <CHRONEVENT>
        <CHRONSTRUCT CHRONCOLUMN="SOCIALCLIMATE" RELEVANCE="PERIOD" RESP="IMG">
            <DATE CALENDAR="NEWSTYLE" CERTAINTY="CERT">Date of event here</DATE>
            <CHRONPROSE>
                Description of event here
            </CHRONPROSE>
        </CHRONSTRUCT>
    </CHRONEVENT>
</EVENTS>
